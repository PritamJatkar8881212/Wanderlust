<% layout("/layouts/boilerplate.ejs") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter {
            display: inline-block;
            margin: 0 1rem; 
            opacity: 0.7;
        }
        .icon{
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .filter p {
            font-size: 0.8rem;
        }
        .tax-toggle {
            height: 3rem;
            border: 0.025rem solid rgb(212, 206, 206);
            border-radius: 1rem;
            padding: 0.5rem 1rem;
            display: flex;
            align-items: center;
        }
        .tax-info{
            display: none;
        }
        .filters-parent {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>

    <body>
        <!-- <h3>All Listings</h3> -->
        <div class="filters-parent">
            <div id="filters">
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic Cities</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountain</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Forts</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing Pools</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </div>
                <div class="filter">
                    <div class="icon"><i class="fa-regular fa-snowflake"></i></div>
                    <p>Arctic</p>
                </div>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">After Including of all Taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-1">
            <% for(listing of allListings) { %>
                <a class="listing-link" href="/listings/<%= listing._id %>">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text"><b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                                <i class="tax-info"> &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>

    <script>
        let taxToggle = document.querySelector('#flexSwitchCheckDefault');
        taxToggle.addEventListener("click", () => {
            console.log("clicked");
            let taxInfo = document.querySelectorAll('.tax-info');
            for (let tax of taxInfo) {
                if (tax.style.display === "none" || tax.style.display === "") {
                    tax.style.display = "inline";
                } else {
                    tax.style.display = "none";
                }
            }
        });
    </script>