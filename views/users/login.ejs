<% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3 mb-3">
        <div class="col-4 offset-4">
            <h3>Login on Wanderlust</h3>
            <form class="needs-validation" method="post" action="/login" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="Enter a Username"
                        required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Enter Password"
                        required>
                </div>

                <button class="btn btn-success add-btn mt-3">Login</button>

            </form>
        </div>
    </div>